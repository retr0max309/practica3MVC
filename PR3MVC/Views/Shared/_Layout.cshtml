<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - PR3MVC</title>

    <!-- Bootstrap (local) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- (Opcional) Iconos Bootstrap vía CDN -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Tus estilos -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PR3MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-brightness-high"></i> PR3MVC
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="mainNav" class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>

                        <li class="nav-item"><a class="nav-link" asp-controller="ProductoModels" asp-action="Index">Productos</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="ClienteModels" asp-action="Index">Clientes</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="PedidoModels" asp-action="Index">Pedidos</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="DetallePedidoModels" asp-action="Index">Detalle pedidos</a></li>
                    </ul>

                    <div class="d-flex">
                        <a asp-controller="ProductoModels" asp-action="Create" class="btn btn-light btn-sm">
                            <i class="bi bi-plus-circle"></i> Nuevo producto
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="py-4">
        <div class="container">
            <div class="content-surface p-4 p-lg-5 rounded-4 shadow-sm bg-white">
                @RenderBody()
            </div>
        </div>
    </main>

    <footer class="border-top bg-body-tertiary py-3 mt-auto">
        <div class="container small text-secondary d-flex justify-content-between">
            <span>&copy; @DateTime.Now.Year - PR3MVC</span>
            <a class="link-secondary" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts (al final para cargar rápido) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
